{{#each rooms}}
<li>
  <fieldset >
    <legend style="position: relative; left: 10px;">Room {{math @index "+" 1}}</legend>

    <label class="grid-25">
      <span>Adults<span>(18+)</span></span>
      <select class="js-adults-count" name="rooms[{{@index}}][adultsCount]">
        {{#select adultsCount}}
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        {{/select}}
      </select>
    </label>

    <label class="grid-25">
      <span>Children<span>(0-17)</span></span>
      <select class="js-children-count" name="rooms[{{@index}}][childrenCount]">
        {{#select childrenCount}}
        <option value="0">0</option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        {{/select}}
      </select>
    </label>

    <fieldset class="grid-40" >
      {{#if children}}
      <legend style="position: relative; left: 10px;">Age</legend>
      <ul style="margin-left: 0;">

        {{#each children}}
        <li class="grid-30">
          <label>
            <select class="js-child-age" name="rooms[{{@../index}}][children][{{@index}}]" required>
              {{#select this}}
              <option value="">â€”</option>
              <option value="0">&lt;1</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="11">11</option>
              <option value="12">12</option>
              <option value="13">13</option>
              <option value="14">14</option>
              <option value="15">15</option>
              <option value="16">16</option>
              <option value="17">17</option>
              {{/select}}
            </select>
          </label>
        </li>
        {{/each}}
      </ul>
      {{/if}}
    </fieldset>

    <label class="grid-10">
      <span>Remove room</span>
      <button class="js-remove-room" data-room="{{@index}}">X</button>
    </label>

  </fieldset>
</li>
{{/each}}


<li>
   <button class="js-add-room">Add room</button>
</li>
